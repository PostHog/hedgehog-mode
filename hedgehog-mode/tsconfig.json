{
  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "module": "ESNext",
    "moduleResolution": "node", // Resolve modules using Node.js style
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "sourceMap": true,
    "target": "ESNext",
    "declaration": true,
    "types": ["node", "vitest/globals"],
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
